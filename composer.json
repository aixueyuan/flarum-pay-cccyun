{
    "name": "neworder/flarum-pay-yun",
    "description": "Connect pay.yun.cc's payment system with flarum's money",
    "keywords": [
        "flarum"
    ],
    "type": "flarum-extension",
    "license": "Unlicense",
    "require": {
        "flarum/core": "^1.2.0",
        "antoinefr/flarum-ext-money": "*"
    },
    "authors": [
        {
            "name": "aixueyuan",
            "email": "A@neworder.cc",
            "role": "Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "Neworder\\PayYun\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "Pay Yun 易支付对接",
            "category": "feature",
            "icon": {
                "name": "fas fa-money-bill-wave-alt",
                "color": "#fff",
                "backgroundColor": "#f9a825"
            }
        },
        "flarum-cli": {
            "modules": {
                "admin": true,
                "forum": true,
                "js": true,
                "jsCommon": true,
                "css": true,
                "locale": true,
                "gitConf": true,
                "githubActions": true,
                "prettier": true,
                "typescript": true,
                "bundlewatch": false,
                "backendTesting": true,
                "editorConfig": true,
                "styleci": true
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
